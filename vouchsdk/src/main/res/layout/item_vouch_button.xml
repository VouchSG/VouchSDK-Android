<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/buttonItem"
        android:layout_width="@dimen/dimens_240dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_16dp"
        android:layout_marginStart="@dimen/dimens_16dp"
        android:layout_marginTop="@dimen/dimens_8dp"
        android:background="@android:color/transparent"
        style="@style/VouchButton">


    <ImageView
            android:id="@+id/borderButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/button_chat_rounded"/>

    <TextView
            android:id="@+id/vouchButtonItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimens_8dp"
            android:textStyle="bold"
            tools:text="Radhika"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAllCaps="true"
            android:layout_gravity="center"/>


</FrameLayout>