<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dimens_200dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dimens_8dp"
        android:paddingEnd="@dimen/dimens_8dp"
        android:layout_gravity="center_horizontal">

    <FrameLayout
            android:id="@+id/buttonItem"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_40dp"
            android:layout_marginBottom="@dimen/dimens_8dp"
            android:background="@android:color/transparent"
            style="@style/VouchButton">


        <ImageView
                android:id="@+id/borderButton"
                android:layout_width="@dimen/dimens_184dp"
                android:layout_height="match_parent"
                android:src="@drawable/button_chat_rounded"/>

        <TextView
                android:id="@+id/vouchButtonItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/dimens_16dp"
                android:paddingEnd="@dimen/dimens_16dp"
                android:padding="@dimen/dimens_8dp"
                android:textStyle="bold"
                tools:text="Radhika"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAllCaps="true"
                android:layout_gravity="center"/>


    </FrameLayout>

</FrameLayout>